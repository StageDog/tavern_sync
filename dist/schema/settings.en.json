{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "user_name": {
      "type": "string",
      "pattern": "^\\S+$"
    },
    "configs": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "worldbook",
              "preset"
            ]
          },
          "name": {
            "type": "string"
          },
          "file": {
            "type": "string",
            "pattern": "^(?:(?:[a-zA-Z]:|\\.|\\.\\.)?([\\\\/][^\\\\/]+)*|[^\\\\/]+)$"
          }
        },
        "required": [
          "type",
          "name",
          "file"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "user_name",
    "configs"
  ],
  "additionalProperties": false
}