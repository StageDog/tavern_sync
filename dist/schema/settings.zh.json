{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "user名称": {
      "type": "string",
      "pattern": "^\\S+$"
    },
    "配置": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "类型": {
            "type": "string",
            "enum": [
              "世界书",
              "预设"
            ]
          },
          "酒馆中的名称": {
            "description": "世界书/预设的配置文件要提取到本地哪个文件中, 可以是绝对路径或相对于本文件的相对路径",
            "type": "string"
          },
          "本地文件路径": {
            "description": "世界书/预设的配置文件要提取到本地哪个文件中, 可以是绝对路径或相对于本文件的相对路径",
            "type": "string",
            "pattern": "^(?:(?:[a-zA-Z]:|\\.|\\.\\.)?([\\\\/][^\\\\/]+)*|[^\\\\/]+)$"
          },
          "导出文件路径": {
            "description": "当使用 `push -e` 导出能直接由酒馆界面导入的世界书/预设时, 要将导出文件存放在哪个文件中; 不填则默认导出到配置文件的同目录下",
            "type": "string"
          }
        },
        "required": [
          "类型",
          "酒馆中的名称",
          "本地文件路径"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "user名称",
    "配置"
  ],
  "additionalProperties": false
}